{% for flash_error in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

<div class="register-container" style="display: flex; justify-content: center; align-items: center; min-height: 100vh; background-color: #f0f8ff;">
    <div class="register-box" style="background-color: #001f3f; padding: 2rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); width: 400px;">
        <h1 style="color: #ffffff; text-align: center; margin-bottom: 2rem;">S'inscrire:</h1>

        {{ form_start(registrationForm) }}
        
        <div class="form-group" style="margin-bottom: 1.5rem;">
            {{ form_label(registrationForm.email, null, {'label_attr': {'style': 'color: #ffffff;'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'style': 'background-color: #f0f8ff; color: #001f3f; border: none; border-bottom: 2px solid #ffffff; border-radius: 0;'}}) }}
        </div>

        <div class="form-group" style="margin-bottom: 1.5rem;">
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'style': 'color: #ffffff;'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'style': 'background-color: #f0f8ff; color: #001f3f; border: none; border-bottom: 2px solid #ffffff; border-radius: 0;'}}) }}
        </div>

        <div class="form-group" style="margin-bottom: 1.5rem;">
            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'style': 'color: #ffffff;'}}) }}
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'style': 'margin-right: 10px;'}}) }}
        </div>

        <button type="submit" class="btn btn-block" style="background-color: #007bff; color: #ffffff; border: none; padding: 0.8rem; border-radius: 4px; width: 100%; font-weight: bold; cursor: pointer;">Valider</button>

        {{ form_end(registrationForm) }}

        <p style="color: white; text-align: center; margin-top: 1rem;">
            Vous avez un compte? <a href="/login" style="color: #007bff; font-weight: bold; text-decoration: none;">Login!</a>
        </p>
    </div>
</div>
