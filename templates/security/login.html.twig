<div class="login-container" style="display: flex; justify-content: center; align-items: center; min-height: 100vh; background-color: #f0f8ff;">
    <div class="login-box" style="background-color: #001f3f; padding: 2rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); width: 400px;">
        <h1 style="color: #ffffff; text-align: center; margin-bottom: 2rem;">Login</h1>

        {% if error %}
            <div class="alert alert-danger" role="alert" style="color: #ffffff; background-color: #ff4d4d; padding: 0.5rem; text-align: center; border-radius: 4px;">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-info" role="alert" style="color: #001f3f; background-color: #cce5ff; padding: 0.5rem; text-align: center; border-radius: 4px;">
                You are logged in as {{ app.user.username }}. <a href="{{ path('app_logout') }}" style="color: #007bff; font-weight: bold; text-decoration: none;">Logout</a>
            </div>
        {% endif %}

        <form method="post" style="margin-top: 1.5rem;">
            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label for="inputEmail" style="color: #ffffff;">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" required autofocus style="background-color: #f0f8ff; color: #001f3f; border: none; border-bottom: 2px solid #ffffff; border-radius: 0; padding: 0.5rem;">
            </div>

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label for="inputPassword" style="color: #ffffff;">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required style="background-color: #f0f8ff; color: #001f3f; border: none; border-bottom: 2px solid #ffffff; border-radius: 0; padding: 0.5rem;">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-block" style="background-color: #007bff; color: #ffffff; border: none; padding: 0.8rem; border-radius: 4px; width: 100%; font-weight: bold; cursor: pointer;">Login</button>
        </form>

        <p style="color: white; text-align: center; margin-top: 1rem;">
            Don't have an account? <a href="/register" style="color: #007bff; font-weight: bold; text-decoration: none;">Register!</a>
        </p>
    </div>
</div>
